<h1>Chitter</h1>

<form action="/peeps">
  <input type="submit" value="Back to Feed">
</form>

<h2>Your Peeps</h2>
<% @peeps.each do |peep| %>
  <ul>
    <li class="peep">
      <%= peep.content %>
      <%= peep.time %>

      <form action="/peeps/<%= peep.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete">
      </form>

      <form action="/peeps/<%= peep.id %>/edit">
        <input type="submit" value="Edit">
      </form>
    </li>
  </ul>
<% end %>
